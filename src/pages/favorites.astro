---
import Layout from '../layouts/Layout.astro';
import { FavoritesGrid } from '../components/FavoritesGrid';
import { productUtils } from '../utils/product';

// Traemos los productos desde BCMS en el servidor
const products = await productUtils.all();
---

<Layout title="Favoritos | Store">
  <section class="pt-32 pb-20 bg-white min-h-screen">
    <div class="container mx-auto px-6">
      <header class="mb-16 border-l-4 border-black pl-6">
        <h1 class="text-5xl font-black uppercase italic tracking-tighter">
          Mis Favoritos
        </h1>
        <p class="text-[10px] text-gray-400 uppercase tracking-[4px] mt-2">
          Sincronizado con tu selecci√≥n local
        </p>
      </header>

      <main>
        {/* client:only es la clave para que lea tus favoritos guardados */}
        <FavoritesGrid client:only="react" products={products} />
      </main>
    </div>
  </section>
</Layout>