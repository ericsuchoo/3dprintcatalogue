---
import Header from '../components/layout/Header';
import ContextWrapper from '../components/ContextWrapper';

interface Props {
    title?: string;
}

const { title = "3D Print Catalogue" } = Astro.props;
---

<!doctype html>
<html lang="es">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width" />
        <title>{title}</title>
    </head>
    <body class="overflow-x-hidden">
        <ContextWrapper client:load>
            <Header client:load />
            <main>
                <slot />
            </main>
        </ContextWrapper>
    </body>
</html>